<%= form_for @user_session, :url => :user_session do |f| %>
  <% if @user_session.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited a succesful login:</h2>
    <ul>
    <% @user_session.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.label :login %><br />
  <%= f.text_field :username %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <div class="actions">
    <%= f.submit 'Login' %>
  </div>
<% end %>
