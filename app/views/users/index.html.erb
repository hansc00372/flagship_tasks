<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>First</th>
    <th>Last</th>
    <th>Email</th>
    <th>Is admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.first %></td>
    <td><%= user.last %></td>
    <td><%= user.email %></td>
    <td><%= user.is_admin %></td>
    <td><%= link_to 'Show', user %></td>
<% if !current_user.nil? and (current_user.is_admin or current_user == user) %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
<% else %>
    <td></td>
<% end %>
<% if !current_user.nil? and current_user.is_admin and current_user != user %>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
<% else %>
    <td></td>
<% end %>
  </tr>
<% end %>
</table>

